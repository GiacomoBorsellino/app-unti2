generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Document {
  id          Int                  @id @default(autoincrement())
  name        String               @unique
  description String
  pathImg     String
  pathFile    String
  categories  DocumentCategories[] // Esplicito la tabella di relazione per rinominare colonne
}

model Categories {
  id          Int                  @id @default(autoincrement())
  description String
  documents   DocumentCategories[] // Esplicito la tabella di relazione per rinominare colonne
}

model DocumentCategories {
  document   Document   @relation(fields: [documentId], references: [id])
  documentId Int
  category   Categories @relation(fields: [categoryId], references: [id])
  categoryId Int

  @@id([documentId, categoryId]) // PK composta
}

model User {
  id    Int         @id @default(autoincrement())
  name  String
  email String
  roles UserRoles[] // Esplicito la tabella di relazione per rinominare colonne
}

model Roles {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  users       UserRoles[] // Esplicito la tabella di relazione per rinominare colonne
}

model UserRoles {
  user   User  @relation(fields: [userId], references: [id])
  userId Int
  role   Roles @relation(fields: [roleId], references: [id])
  roleId Int

  @@id([userId, roleId]) // PK composta
}
